extends layout

block content
	.container
		form(method='post' , action='contact/send')
			h1 Contact Us
			.form-group
				label Name
				input.form-control(type="text" , name='name')
			.form-group
				label Email
				input.form-control(type="email" , name='email')
			.form-group
				label Message
				input.form-control(name='message')
			button.btn.btn-primary(type="submit") Submit
